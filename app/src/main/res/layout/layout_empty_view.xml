<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_empty_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/default_layout_margin_padding"
    android:visibility="gone">

    <!--Empty View Title-->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_empty_view_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:fontFamily="@font/nunito_black"
        android:gravity="center"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:textColor="@color/empty_view_title_color"
        android:textSize="@dimen/empty_view_title_text_size"
        tools:text="Title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_empty_view_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/empty_view_title_message_margin"
        android:fontFamily="@font/nunito_black"
        android:gravity="center"
        android:textColor="@color/empty_view_message_color"
        android:textSize="@dimen/empty_view_message_text_size"
        tools:text="Message" />
</LinearLayout>